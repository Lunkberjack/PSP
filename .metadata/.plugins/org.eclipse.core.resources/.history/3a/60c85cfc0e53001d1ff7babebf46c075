package main.act1_15;

public class Main {
	// Veces que se ejecutar√°n los hilos
	public static final int REP = 5;

	public static void main(String[] args) {
		Hilo ping = new Hilo("PING");
		Hilo pong = new Hilo("PONG");

		ping.getHilo().start();
		pong.getHilo().start();

		for(int i = 0; i < 10; i++) {
			ping.getHilo().run();
			try {
				ping.getHilo().join();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			pong.getHilo().run();
		}
	}
}