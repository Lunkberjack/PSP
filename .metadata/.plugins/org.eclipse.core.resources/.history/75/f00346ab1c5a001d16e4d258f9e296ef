package main.act1_20;

import java.util.HashMap;
/**
 * Ejemplo de ejecución concurrente de hilos. Se simula
 * una máquina de llenado de botellas de agua que tienen
 * distinto volumen.
 * @author rafa
 * @version 1.0
 */
public class MaquinaLlenado {

	public static void main(String[] args) {
		//máquina de llenado de dos tipos de botellas: 0,2 y 0,5 litros
		HashMap<Thread, LlenadoAgua> procesoLlenado = new HashMap<Thread,LlenadoAgua>();
		//grupo de hilos para el llenado de botellas de 200ml
		ThreadGroup tg2 = new ThreadGroup("200ml");
		//grupo de hilos para el llenado de botellas de 500ml
		ThreadGroup tg5 = new ThreadGroup("500ml");
		LlenadoAgua llenadoAgua;
		for(int i=0;i<10;i++) {
			if(i%2==0) {
				//llenado de agua para una botella de 200ml
				llenadoAgua = new LlenadoAgua(new Botella(200));
				//hilo de llenado de agua para una botella de 200ml
				procesoLlenado.put(new Thread(tg2,llenadoAgua),llenadoAgua);
			}else {
				//llenado de agua para una botella de 500ml
				llenadoAgua = new LlenadoAgua(new Botella(500));
				//hilo de llenado de agua para una botella de 500ml
				procesoLlenado.put(new Thread(tg5,llenadoAgua),llenadoAgua);
			}
		}
		System.out.println("================================================"
				+ "==================================================");
		System.out.println("Comienza el proceso de llenado, por favor espere");
		System.out.println("================================================"
				+ "==================================================");
		//se inician los hilos de lleando
		for(Thread llenado:procesoLlenado.keySet())
			llenado.start();
		
		//se controla la finalización de los grupos de hilos
		while(tg2.activeCount()>0 || tg5.activeCount()>0);
		
		System.out.println("Información sobre el llenado de las botellas");
		System.out.println("================================================="
				+ "=================================================");
		//si llegamos aquí es que todas las botellas se han llenado
		//mostramos las botellas que se han llenado
		for(LlenadoAgua llenado:procesoLlenado.values())
			System.out.println(llenado.getBotella());
		
		System.out.println("================================================="
				+ "=================================================");
		
		System.out.println("El proceso de llenado ha finalizado");
		System.out.println("================================================="
				+ "=================================================");
	}

}
