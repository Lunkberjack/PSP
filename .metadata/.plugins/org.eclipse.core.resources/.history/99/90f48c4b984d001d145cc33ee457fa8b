package main;

public class Act1_11_dame {
	public static void main(String[] args) {
		// Si se llama sin par치metros se devuelve el c칩digo de error 1
		if(args.length == 0)
			System.exit(1);
		// Si se llama con un par치metro (String), se devuelve 2
		else if(args.length == 1 && args[0] instanceof String) {
		    String var = args[0];
		    int n;
		    try {
		        n = Integer.parseInt(args[1]);
		    } catch (NumberFormatException e) {
		    	System.exit(2);
		    }
		    System.exit(3);
		}
		// En los dem치s casos
		else
			System.exit(0);
	}
	
	private static boolean esNegativo(char number[])
	{
	    int i = 0;

	    //checking for negative numbers
	    if (number[0] == '-')
	        i = 1;
	    for (; number[i] != 0; i++)
	    {
	        //if (number[i] > '9' || number[i] < '0')
	        if (!isdigit(number[i]))
	            return false;
	    }
	    return true;
	}
}
