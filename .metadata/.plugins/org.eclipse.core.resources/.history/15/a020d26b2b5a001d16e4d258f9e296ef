package main.act1_20;

import java.util.concurrent.ThreadLocalRandom;

public class MediaAritmetica extends TiempoEjecucion implements Runnable {
	Alumno[] alumnos;
	double media;
	
	public MediaAritmetica(Alumno[] alumnos) {
		this.alumnos = alumnos;
	}
	
	@Override
	public void run() {
		this.setTiempoComienzo(System.currentTimeMillis());
		double res = 0;
		
		for(Alumno x:alumnos) {
			res += x.getEdad();
		}
		this.media = res/this.alumnos.length;

		try {
			// Simula un tiempo aleatorio en la ejecuci√≥n
			Thread.sleep(ThreadLocalRandom.current().nextInt(1000)s);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		this.setTiempoTotalEjecucion();
	}

	public double getMedia() {
		return media;
	}
}
