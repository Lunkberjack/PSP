package main.act1_15;

public class Hilo implements Runnable {
	private String msg;

	public Hilo(String msg) {
		this.msg = msg;
	}

	@Override
	public void run() {
		// No encuentro la manera de que se alterne la ejecuci√≥n de 
		// iteraciones entre los dos procesos
		for (int i = 0; i < 5; i++) {
			System.out.println(msg);
		}
	}
}