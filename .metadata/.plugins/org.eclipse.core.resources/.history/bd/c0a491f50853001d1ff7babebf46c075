package main.act1_15;

public class Main {
	// Veces que se ejecutar√°n los hilos
	public static final int REP = 5;
	
	public static void main(String[] args) {
		Hilo ping = new Hilo("PING");
		Hilo pong = new Hilo("PONG");
		
		try {
			for(int i = 0; i < REP; i++) {
				ping.getHilo().start();
				pong.getHilo().start();
				ping.getHilo().join();
				pong.getHilo().join();
			}
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}