package main.act1_12;

import java.io.File;
import java.io.IOException;
import java.util.Scanner;

public class Act1_12_pasa {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		ProcessBuilder pb;
		Process process;
		String param;
		int exitVal;
		try {
			pb = new ProcessBuilder();
			pb.directory(new File("/home/lucia/PSP/JavaProcesos/bin"));
			
			System.out.println("Introduce una cadena de caracteres:");
			param = sc.nextLine();
			// Llama al otro programa con un par치metro tipo cadena:
			pb.command("java", "main.act1_12.Act1_12_dame", param);
			process = pb.start();
			exitVal = process.waitFor();			
			System.out.println("Llamada con un par치metro tipo cadena: " + exitVal);
			// Llama al otro programa sin par치metros:
			pb.command("java", "main.act1_12.Act1_12_dame");
			process = pb.start();
			exitVal = process.waitFor();			
			System.out.println("Llamada sin par치metros: " + exitVal);
			
		} catch (IOException e) {			
			e.printStackTrace();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}
