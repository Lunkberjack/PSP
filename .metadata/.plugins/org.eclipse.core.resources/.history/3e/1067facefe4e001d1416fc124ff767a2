package main.act1_14;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class RecibeFicheros {
	public static void main(String[] args) {
		int contador = 0;
		String texto = "Hola amigos aquí está la primera hache intercalada aha y aquí la segunda ehe y bueno así"
				+ " hasta la tercera ihi y la cuenta a pesar de las chs tiene que ser 3";
		Pattern pat = Pattern.compile("*h*", Pattern.CASE_INSENSITIVE);
		Matcher mat = pat.matcher(texto);
		while(mat.find()) {
			contador++;
		}
	}
}